<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

  <!--
      Added the entity template.
  -->
  <changeSet author="TPT3_team" id="template_instance-1">
    <createTable tableName="template_instance">
      <column autoIncrement="${autoIncrement}" name="id" type="${type.long}">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="template_name" type="${type.string}(32)">
        <constraints nullable="false"/>
      </column>
      <column name="content" type="${type.jsonb}">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>
